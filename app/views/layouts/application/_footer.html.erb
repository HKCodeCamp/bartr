
<div data-role="popup" id="settingsPopup" class="" data-theme="a" data-overlay-theme="a">
  <ul data-role="listview" data-inset="true" data-theme="a">

  <% if user_signed_in? %>
       <li data-role="divider" data-theme="b"><%= current_user.email %></li>
            <% if current_user.admin? %>
              <li><%= link_to "Admin", admin_path %></li>
            <% end %>
            
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li><%= link_to "Change Password", edit_user_registration_path %></li>
			      <% if !current_user.sms_verified? %>
              <li><%= link_to "Verify Account", sms_index_path %></li>
            <% end %>
            <li><%= link_to "Sign out", destroy_user_session_path %></li>
          <% else %>
            <li><%= link_to "Create Account", new_user_registration_path %></li>
            <li><%= link_to "Sign in", new_user_session_path %></li>
            <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :rel => "external" %></li>
         <% end -%>
  </ul>
</div>

