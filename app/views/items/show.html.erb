<div class="item">
  <h1 class="title"><%= @item.title %></h1>
  <p class="price">$<%= @item.price %></p>
  <p class="desc"><%= @item.desc %></p>
  <% if @item.photos.length > 0 %>
    <%= cl_image_tag(@item.photos[0].path, { size: '125x125', crop: :fit }) %>
  <% end %>
</div>
  <div class="comments">
    <h1>Comments</h1>
    <% @item.comments.each do |comment| %>
      <div class="comment">
        <p class="commentBy"><%= comment.user.name %></p>
        <p class="commentMsg"><%= comment.comment %></p>
      </div>
    <% end %>
    <% if current_user %>
      <div class="comment">
        <%= simple_form_for(@item.comments.build, :url => comment_item_path(@item)) do |f| %>
            <%= f.input :comment, :label => false, :placeHolder => "Post a comment" %>
            <%= f.submit "Comment" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
