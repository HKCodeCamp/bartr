<% if !@user.nil? %>

Hi <%= @nickname %>, <p/>

<p>You have <%= @user.items.length.to_s %> items that is actively on sell.</p>

<% if @user.items.length > 0 %>
<%  @user.items.each { |item| %>
<%       if item.photos.length > 0  %>
            <div style="float:left; margin-left:10px; margin-bottom:10px">
              <a href="<%= url_for( item_url(item)) %>"  >  <%= cl_image_tag(item.photos[0].path, { size: '75x75', crop: :fit }) %> </a>
            </div>
<%       end  %>
<%  } %>

<% end %>

<% end %>