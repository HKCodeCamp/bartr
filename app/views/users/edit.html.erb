<%= form_for @user do |f| %>
  <h2>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </h2>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :desc %>
    <%= f.text_field :desc %>
  </p>

  <p>
    <span><%= f.submit "Save" %></span>
    <span><%= link_to "Cancel", user_path(@user) %></span>
  </p>
<% end %>
